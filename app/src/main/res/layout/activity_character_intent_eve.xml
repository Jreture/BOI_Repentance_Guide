<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Character_Intent_eve"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/eve"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#AE7F7F"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EVE(이브)"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/character_eve"
        android:background="#DF371111"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="56dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#90464946">

    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="캐릭터 설정"
        android:textColor="#E2420808"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="· 체력 : 빨간하트 2개\n· 공격력 :3.5 (* 0.75)\n· 공격 속도 : 2.73\n· 탄속 : 1\n· 사거리 : 6.5\n· 이동 속도 : 1.25\n· 운 : 0\n· 고유 능력 : 바빌론의 창녀가 빨간 하트가 1칸일 때도 발동 (Rebirth부터)\n· 기본 소지 픽업 : 없음\n· 기본 소지 아이템 : Dead Bird(죽은 새), Whore of Babylon(바빌론의 창녀), Razor Blade(면도날)\n· 캐릭터 해금 방법 : 플레이 한 번에 악마와 2번 계약(오리지날), 하트를 획득하지 않고 두 스테이지 연속 클리어(리버스)\n· 생득권 효과 : 영원한 저주 - 바빌론의 창녀와 죽은 새가 상시 발동"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#90464946">

    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관련 해금 요소"
        android:textColor="#E2420808"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="추후 생성"
        android:textSize="14sp"
        android:textStyle="bold"/>


</LinearLayout>